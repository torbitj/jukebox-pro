{
  "name": "jukebox-pro",
  "type": "module",
  "imports": {
    "#*": "./*.js"
  },
  "scripts": {
    "start": "node --env-file=.env server.js",
    "dev": "nodemon --env-file=.env server.js",
    "test": "vitest",
    "db:schema": "psql -d jukebox_pro -f db/schema.sql",
    "db:seed": "node --env-file=.env db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.11",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "supertest": "^7.1.0",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22"
  }
}
